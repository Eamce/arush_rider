<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dip"
    android:paddingTop="1dip"
    android:paddingEnd="8dip"
    android:paddingBottom="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".75">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_view_items_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name:"
                android:textColor="@color/teal"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_view_items_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_view_items_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_view_items_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="13sp" />
            <LinearLayout
                android:id="@+id/ll_view_items_product_addons"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_view_items_product_addons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add-on:"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_view_items_product_addons_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/ic_baseline_remove_red_eye_24"></Button>

            </LinearLayout>


            <!--            <TextView-->
            <!--                android:id="@+id/tv_view_items_product_subtotal"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textColor="@color/red"-->
            <!--                android:text="SUBTOTAL: PHP 0.00" />-->

            <Button
                android:id="@+id/btn_view_items_product_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/teal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="SUBTOTAL PHP 0.00"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

