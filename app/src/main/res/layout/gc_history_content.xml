<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dip"
    android:paddingTop="1dip"
    android:paddingEnd="8dip"
    android:paddingBottom="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".20">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_gc_history_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Name" />

                <Button
                    android:id="@+id/btn_gc_history_type"
                    android:layout_marginLeft="5dp"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:background="@drawable/ic_phone_android_black_24dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_gc_history_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textColor="@color/teal"/>

            <TextView
                android:id="@+id/tv_gc_history_contactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No:"
                android:textColor="@color/teal"/>

            <TextView
                android:id="@+id/tv_gc_history_thru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thru :"
                android:textColor="@color/teal"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_gc_history_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 00/00/0000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_gc_history_ticket_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket#:"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_gc_history_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order:"
                android:layout_marginTop="0dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_gc_history_num_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Pack:"
                android:layout_marginTop="0dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_gc_history_tendered_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Tendered Amount:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_history_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Change:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_history_count_rider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="No of Rider: "
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_history_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Payment Method:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_history_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="P1,000.00" />

            <TextView
                android:id="@+id/tv_gc_amount_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="(Ordered Amt. + Rider`s Fee) - Discount" />

            <Button
                android:id="@+id/btn_gc_history_subtotal"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:text="TOTAL PHP 0.00"
                android:textColor="@color/white"
                android:background="@color/teal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".80"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gc_history_view"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background = "@drawable/ic_view_list_orange_24dp"
                    android:textColor="#ff4500"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="25sp"
                    android:onClick="HistoryOnClickView"/>

                <Button
                    android:id="@+id/btn_gc_del_status"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="5dp"
                    android:background = "@drawable/ic_check_circle_teal_24dp"
                    android:textColor="#ff4500"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_gc_history_mainriderstat"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background = "@drawable/ic_star_teal_24dp"
                    android:textColor="#ff4500"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="25sp"
                    android:onClick="HistoryOnClickView"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>