<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dip"
    android:paddingTop="1dip"
    android:paddingEnd="8dip"
    android:paddingBottom="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".75">

            <ImageView
                android:id="@+id/iv_discount_image_not_tele"
                android:background="@drawable/ic_broken_image_gray_24dp"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight=".25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discount_name_not_tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/teal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_discount_type_not_tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount Type:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_discount_no_not_tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount No:"
                android:textSize="13sp" />

<!--            <TextView-->
<!--                android:id="@+id/tv_status"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Status:"-->
<!--                android:textSize="13sp" />-->


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

