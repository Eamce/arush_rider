<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dip"
    android:paddingTop="1dip"
    android:paddingEnd="8dip"
    android:paddingBottom="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".25">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reports_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Name" />

                <Button
                    android:id="@+id/btn_transaction_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_phone_android_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_reports_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="Address:" />

            <TextView
                android:id="@+id/tv_reports_contactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="Contact No:" />

            <TextView
                android:id="@+id/tv_reports_thru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal"
                android:text="Thru: "
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_reports_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginTop="0dp"/>
            <TextView
                android:id="@+id/tv_reports_ticketno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket No:"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_reports_tendered_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tendered Amount: "
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/tv_reports_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change: "
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/tv_reports_count_rider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Rider: "
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/tv_reports_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="P1,000.00" />

            <TextView
                android:id="@+id/tv_reports_amount_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="(Ordered Amt. + Delivery Charge) - Discount" />

            <Button
                android:id="@+id/btn_reports_subtotal"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:text="SUBTOTAL PHP 0.00"
                android:textColor="@color/white"
                android:background="@color/teal" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight=".75">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_reports_mainriderstat"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/ic_star_teal_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

