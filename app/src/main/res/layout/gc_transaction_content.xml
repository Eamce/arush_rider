<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dip"
    android:paddingTop="1dip"
    android:paddingEnd="8dip"
    android:paddingBottom="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/teal"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_gc_transaction_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_phone_android_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_gc_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textColor="@color/teal" />

            <TextView
                android:id="@+id/tv_gc_contact_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No:"
                android:textColor="@color/teal" />

            <TextView
                android:id="@+id/tv_gc_thru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thru:"
                android:textColor="@color/teal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_gc_ticket_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ticket#:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Order:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_num_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="No. of Pack:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_tendered_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Tendered Amount:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Change:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_count_rider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="No. of Rider:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions:" />

            <TextView
                android:id="@+id/tv_gc_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Payment Method:"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_gc_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P1,000.00"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_gc_amount_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Ordered Amt. + Picking Charge + Rider`s Fee) - Discount"
                android:textColor="@color/red" />


            <Button
                android:id="@+id/btn_gc_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/teal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="TOTAL CHARGES PHP 0.00"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".70"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".77">

                <TextView
                    android:id="@+id/tv_gc_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_gc_view"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@drawable/ic_view_list_orange_24dp"
                        android:onClick="GCOnClickView"
                        android:text=""
                        android:textColor="#ff4500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_gc_ontransit"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_local_shipping_orange_24dp"
                        android:text=""
                        android:textColor="#ff4500"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_gc_delivered"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_check_circle_orange_24dp"
                        android:onClick="GCOnClickDelivered"
                        android:text=""
                        android:textColor="@color/teal"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn_gc_main_rider_stat"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:background="@drawable/ic_star_teal_24dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:orientation="horizontal">-->
            <!--                <Button-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:paddingLeft="20dp"-->
            <!--                    android:paddingRight="20dp"-->
            <!--                    android:layout_marginTop="5dp"-->
            <!--                    android:text="Add to Cart"-->
            <!--                    android:textColor="@color/white"-->
            <!--                    android:background="@color/teal"/>-->
            <!--            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

