<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/custom_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".50"
        android:background="@color/teal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profilepic"
            android:clickable="false"
            app:civ_border_width="3dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/boy"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tv_acc_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_title"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_acc_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_subtitle"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".50">

        <Button
            android:id="@+id/btn_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:drawableLeft="@drawable/ic_format_list_bulleted_white_24dp"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            />

        <Button
            android:id="@+id/btn_change_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:drawableLeft="@drawable/ic_edit_white_24dp"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
        />

<!--        <Button-->
<!--            android:id="@+id/btn_change_picture"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Change Picture"-->
<!--            android:drawableLeft="@drawable/ic_account_circle_white_24dp"-->
<!--            android:background="@color/orange"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:paddingLeft="10dp"-->
<!--            />-->
    </LinearLayout>

    </LinearLayout>

</LinearLayout>